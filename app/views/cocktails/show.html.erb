<%= render 'shared/navbar' %>
<div class="container"></div>
<div><%= render 'shared/banner' %></div> 
<div class="card-product">
  <!--  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" /> -->
  <div class="card-product-photo">
    <%#= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  </div>
  <div class="card-product-infos">
    <div class="card-product-description">
      <h1><%= @cocktail.name %></h1>
      <% @cocktail.doses.each do |dose| %>
        <h1> Made of  <%= dose.description %></h1>
        <h2>you need <%= dose.ingredient_name %> </h2> 
        <!-- could be written as @cocktail.ingredients too-->
        <p></p>

        <p><%= link_to 'Delete', dose_path(dose), method: :delete , class: "btn btn-danger"  %></p>
      <% end %>
    </div>
  </div>
</div>


